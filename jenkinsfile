pipeline {
    agent {
        node {
            label "linux && java11"
        }
    }
    stages {

        stage ("build") {
            steps {
                echo("hello build")
            }
        }

        stage ("test") {
            steps {
                echo("hello test")
            }
        }

        stage ("deploy") {
            steps {
                echo("hello deploy")
            }
        }
    }
    post {
        always {
            echo "1 will always say hello again"
        }
        success {
            echo "yeay,success"
        }
        failure {
            echo "oh no, failure"
        }
        cleanup {
            echo "don't care success or error"
        }
    }
}