pipeline {
    agent {
        node {
            label "linux && java11"
        }
    }
    stages {

        stage ("build") {
            steps {
                echo("hello build 2")
                echo("hello build 2")
                echo("hello build 4")
            }
        }

        stage ("test") {
            steps {
                echo("hello test")
                sh "pwd"
                sh "ls -l"
            }
        }

        stage ("deploy") {
            steps {
                echo("hello deploy")
            }
        }
    }
    post {
        always {
            echo "halo teman teman perkenalkan nama saya rian ganteng"
        }
        success {
            echo "yeay, pipeline berhasill boss"
        }
        failure {
            echo "yahh, pipeline gagal"
        }
        cleanup {
            echo "Bersih-bersih setelah proses selesai (berhasil atau gagal)"
        }
    }
}
